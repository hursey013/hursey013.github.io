{
  "private": true,
  "scripts": {
    "build": "rm -rf ./_site/ && webpack -p && bundle exec jekyll build",
    "deploy": "gh-pages -b master -d _site --dotfiles=true",
    "predeploy": "npm run build && echo 'bhurst.me' > ./_site/CNAME",
    "start": "concurrently \"npm:watch-*\"",
    "watch-jekyll": "bundle exec jekyll serve",
    "watch-webpack": "webpack --watch --mode=development"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "concurrently": "^3.6.1",
    "css-loader": "^3.3.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "gh-pages": "^1.1.0",
    "node-sass": "^7.0.0",
    "postcss": "^6.0.22",
    "postcss-loader": "^2.1.6",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.21.0",
    "tailwindcss": "^0.6.6",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "dot-prop": "^6.0.0"
  }
}
